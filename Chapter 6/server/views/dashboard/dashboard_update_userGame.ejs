<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Link Fontawesome  -->
	<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
	<!-- Link CSS -->
	<link rel="stylesheet" href="/styles/dashboard.css">
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<!-- Link fontawesome -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />

	<title> Update User Game </title>



</head>

<body>

	<section class="hero-image d-flex align-items-center">
		<div class="container mt-5">
			<div class="sidebar">
				<h3 class="p-3">Admin Dashboard</h3>
				<a class="active " href="/dashboard/"><i class="fa fa-home"></i> Home</a>
				<a href="/dashboard/user"><i class="fa fa-user"></i> User</a>
				<a href="/dashboard/create"><i class="fa fa-plus"></i> Create User</a>
			</div>

			<div class="content">
				<h3><i class="fa-solid fa-marker"></i>Form EDIT User Game</h3>
				<form action="/dashboard/users/update/<%= user_game.id %>" method="post">
					<!-- Username -->
					<div class="form-group-dash">
						<input type="text" name="username" class="form-control" placeholder="Username"
							value="<%= user_game.username %>" required>
					</div>
					<!-- Passowrd -->
					<div class="form-group-dash">
						<input type="password" name="password" class="form-control" placeholder="Password"
							value="<%= user_game.password %>" required>
					</div>
					<!-- Button -->
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>

			</div>
		</div>
	</section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
	</script>
</body>

</html>